package com.lics.chat02;

import java.io.DataInputStream;
import java.io.DataOutputStream;
import java.io.EOFException;
import java.io.IOException;
import java.io.InputStream;
import java.io.OutputStream;
import java.net.BindException;
import java.net.ServerSocket;
import java.net.Socket;
import java.net.SocketException;
import java.util.ArrayList;
import java.util.List;

public class ChatServer {

    private List<Client> clients = new ArrayList<>();

    /**
     * 鍔熻兘锛氬惎鍔–hatSever 瀛︽牎锛氬北涓滃笀鑼冨ぇ瀛� 绋嬪簭鍛橈細澶栧姏_Victor 鏃ユ湡锛�2016骞�5鏈�8鏃� 涓婂崍10:26:41
     * 
     * @param args
     */
    public static void main(String[] args) {
        new ChatServer().init();
    }

    /**
     * 鍔熻兘锛氬chatserver鍒濆鍖� 瀛︽牎锛氬北涓滃笀鑼冨ぇ瀛� 绋嬪簭鍛橈細澶栧姏_Victor 鏃ユ湡锛�2016骞�5鏈�8鏃� 涓婂崍10:27:09
     */
    private void init() {
        System.out.println("鏈嶅姟鍣ㄥ凡寮�鍚�");
        // BindException

        ServerSocket ss = null;
        Socket socket = null;
        try {
            ss = new ServerSocket(8888);
        } catch (BindException e) {
            System.out.println("绔彛宸茶鍗犵敤");
            e.printStackTrace();
        } catch (IOException e1) {
            e1.printStackTrace();
        }
        try {
            Client client = null;
            while (true) {
                socket = ss.accept();
                System.out.println("瀹㈡埛椹惧埌");
                client = new Client(socket);
                clients.add(client);
                new Thread(client).start();
            }
        } catch (IOException e) {
            e.printStackTrace();
        }
    }

    private class Client implements Runnable {
        private Socket socket = null;
        InputStream in = null;
        DataInputStream din = null;
        OutputStream out = null;
        DataOutputStream dos = null;
        boolean flag = true;

        public Client(Socket socket) {
            this.socket = socket;
            try {
                in = socket.getInputStream();
                din = new DataInputStream(in);
            } catch (IOException e) {
                System.out.println("鎺ュ彈娑堟伅澶辫触");
                e.printStackTrace();
            }

        }

        public void run() {

            String message;
            try {
                while (flag) {
                    message = din.readUTF();
                    // System.out.println("瀹㈡埛璇达細" + message);
                    forwordToAllClients(message);
                }
            } catch (SocketException e) {
                flag = false;
                System.out.println("瀹㈡埛涓嬬嚎");
                clients.remove(this);
                // e.printStackTrace();
            } catch (EOFException e) {
                flag = false;
                System.out.println("瀹㈡埛涓嬬嚎");
                clients.remove(this);
                // e.printStackTrace();
            } catch (IOException e) {
                flag = false;
                System.out.println("鎺ュ彈娑堟伅澶辫触");
                clients.remove(this);
                e.printStackTrace();
            }

            if (din != null) {
                try {
                    din.close();
                } catch (IOException e) {
                    System.out.println("din鍏抽棴澶辫触");
                    e.printStackTrace();
                }
            }
            if (in != null) {
                try {
                    in.close();
                } catch (IOException e) {
                    System.out.println("din鍏抽棴澶辫触");
                    e.printStackTrace();
                }
            }
            if (socket != null) {
                try {
                    socket.close();
                } catch (IOException e) {
                    System.out.println("din鍏抽棴澶辫触");
                    e.printStackTrace();
                }
            }

        }

        /**
         * 鍔熻兘锛氳浆鍙戠粰鎵�鏈夊鎴风 瀛︽牎锛氬北涓滃笀鑼冨ぇ瀛� 绋嬪簭鍛橈細澶栧姏_Victor 鏃ユ湡锛�2016骞�5鏈�8鏃� 涓婂崍11:11:59
         * 
         * @param message
         * @throws IOException
         */
        private void forwordToAllClients(String message) throws IOException {
            for (Client c : clients) {
                if (c != this) {
                    out = c.socket.getOutputStream();
                    dos = new DataOutputStream(out);
                    forwordToClient(message);
                }
            }
        }

        /**
         * 鍔熻兘锛氬彂閫佺粰涓�涓鎴风 瀛︽牎锛氬北涓滃笀鑼冨ぇ瀛� 绋嬪簭鍛橈細澶栧姏_Victor 鏃ユ湡锛�2016骞�5鏈�8鏃� 涓婂崍11:16:12
         * 
         * @throws IOException
         */
        private void forwordToClient(String message) throws IOException {
            dos.writeUTF(message);
            dos.flush();
            System.out.println("杞彂鎴愬姛锛�");
        }

    }
}
